<script>
  const title = document.querySelector('.page-title');
  fixRegisterTrademarkSuperScripting(title);

  function fixRegisterTrademarkSuperScripting(title) {
    titleText = title.innerHTML;
    if (
      titleText.includes('®') &&
      titleText[titleText.indexOf('®') - 1] !== '>'
    ) {
      const beforeR = titleText.substr(0, titleText.indexOf('®'));
      const afterR = titleText.substr(
        titleText.indexOf('®') + 1,
        titleText.length - 1
      );
      title.innerHTML = beforeR + '<sup>®</sup>' + afterR;
    }
  }
</script>

<script type="text/javascript">
  $.ajax({
    type: 'GET',
    url: '/products/epigenetics-reagents-and-assays/cutana-cut-and-tag-assays/',
    success: function (msg) {
      var html = $(msg);
      var starts = html.find('.product-listing-grid .listing-wrapper').html();
      $('.related_pro_sec .product-listing-grid .listing-wrapper.Snap').html(
        starts
      );
      $('article').removeClass('product-list-item');
      $('article').addClass('product-grid-item');

      $('.related_pro_sec .listing-wrapper.Snap').slick({
        dots: false,
        arrows: true,
        infinite: true,
        variableWidth: true,
        mobileFirst: true,
        slidesToShow: 4,
        slidesToScroll: 1,
        responsive: [
          {
            breakpoint: 8000,
            settings: {
              slidesToScroll: 1,
              slidesToShow: 4,
            },
          },
          {
            breakpoint: 767,
            settings: {
              slidesToScroll: 1,
              slidesToShow: 3,
            },
          },
          {
            breakpoint: 479,
            settings: {
              slidesToScroll: 1,
              slidesToShow: 2,
            },
          },
          {
            breakpoint: 319,
            settings: {
              slidesToScroll: 1,
              slidesToShow: 1,
            },
          },
        ],
      });
    },
  });
</script>

