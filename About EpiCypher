            margin-top: -100px; 
/* This should be the same number as the padding to negate its effect on the layout */
        }
</style>

<script>

document.addEventListener('DOMContentLoaded', (event) => {
  if (window.location.hash) {
    setTimeout(() => {
      const id = window.location.hash.replace('#', '');
      const element = document.getElementById(id);
      if (element) {
        window.scrollTo({
          top: element.offsetTop - 100, // Adjust this value to the height of your fixed header
          behavior: 'smooth'
        });
      }
    }, 0);
  }
});

window.addEventListener('hashchange', function() {
    var adjustedHeight = window.scrollY - 70; // Height of the fixed header
    window.scrollTo(window.scrollX, adjustedHeight);
});

</script>
